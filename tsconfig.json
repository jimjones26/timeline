{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "lib": [
      "es6"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}